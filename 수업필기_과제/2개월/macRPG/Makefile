NAME		=	textRPG

SRCS		=	./MainGame/MainGame.cpp\
				./Character/Character.cpp\
				./Monster/Monster.cpp\
				./Player/Player.cpp\
				./System/System.cpp\
				./Field/Field.cpp\
				./main.cpp

OBJS		=	$(SRCS:%.cpp=%.o)

CC			=	c++
FLAGS		=	-Wall -Wextra -Werror -std=c++11

all			:	$(NAME)

$(NAME)		:	$(OBJS)
				@$(CC) -o $(NAME) $(OBJS)
				@echo "\n  沽ソ033[42;37;1m make complete \033[0m沽ソn"
				@echo "\033[1mfile name: \033[30;47m ./"$(NAME)" \033[0m"

%.o			:	%.cpp
				@$(CC) $(FLAGS) -c $^ -o $@


clean		:
				@rm -f $(OBJS)
				@echo "\n笶暦ｸ十033[41;36;1m object file deleted \033[0m笶暦ｸ十n"

fclean		:	clean
				@rm -f $(NAME)
				@echo " 笶暦ｸ十033[41;36;1m all file deleted \033[0m笶暦ｸ十n"

re			:	
				@echo "\n     箝撰ｸ十033[42;37;1m MAKE RE \033[0m箝撰ｸ十n"
				@make fclean
				@make all

.PHONY		:	all clean fclean re bonus